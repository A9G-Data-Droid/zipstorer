<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Zipstorer</Description>
    <AssemblyTitle>ZipStorer</AssemblyTitle>
    <VersionPrefix>3.8.0</VersionPrefix>
    <Authors>Jaime Olivares</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>ZipStorer</AssemblyName>
    <PackageId>netstandard</PackageId>
    <NetStandardImplicitPackageVersion>2.0.0</NetStandardImplicitPackageVersion>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\src\zipstorer.cs" Exclude="bin\**;obj\**;**\*.xproj;packages\**" Link="ZipStorer.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime" Version="*" />
    <PackageReference Include="System.Threading.Thread" Version="*" />
  </ItemGroup>

</Project>
